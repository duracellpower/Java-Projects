package csbe.Calculator;

import java.io.ByteArrayInputStream;
import java.util.Scanner;

/**
 * Hello world!
 *
 */
public class App {
	public static void main(String[] args) {
		OperandAuswaehlen();
	}

	public static void OperandAuswaehlen() {
		System.out.println("W채hlen Sie eine Optionen aus: 1 = Addition 2 = Subtraktion, 3 = Multiplikation, 4 = Division, 5 = Bin채r");
		Scanner in = new Scanner(System.in);
		int input = in.nextInt();
		switch (input) {
		case 1:
			System.out.println("addieren");
			double zahl1 = ZahlEingabe();
			double zahl2 = ZahlEingabe();
			double resultat = addieren(zahl1, zahl2);
			System.out.println("Resultat: " + resultat);
			break;
		case 2:
			System.out.println("subtrahieren");
			double zahl1 = ZahlEingabe();
			double zahl2 = ZahlEingabe();
			double resultat = subtrahieren(zahl1, zahl2);
			System.out.println("Resultat: " + resultat);
			break;
		case 3:
			System.out.println("multiplizieren");
			double zahl1 = ZahlEingabe();
			double zahl2 = ZahlEingabe();
			double resultat = multiplizieren(zahl1, zahl2);
			System.out.println("Resultat: " + resultat);
			break;
		case 4:
			System.out.println("dividieren");
			double zahl1 = ZahlEingabe();
			double zahl2 = ZahlEingabe();
			double resultat = dividieren(zahl1, zahl2);
			System.out.println("Resultat: " + resultat);
			break;
		case 5:
			System.out.println("bin채r");
			binary();
			break;
		default:
			System.out.println("Ung체ltige Eingabe");
			OperandAuswaehlen();
			break;
		}
		in.close();
	}

	public static double ZahlEingabe() {
		System.out.println("Geben Sie eine Zahl ein");
		Scanner in = new Scanner(System.in);
		double zahl = in.nextDouble();
		in.close();
		return zahl;
	}

	public static double addieren(double zahl1, double zahl2) {
		return zahl1 + zahl2;
	}

	public static void subtrahieren(double zahl1, double zahl2) {
		return zahl1 - zahl2;
	}

	public static void multiplizieren(double zahl1, double zahl2) {
		return zahl1 * zahl2;
	}

	public static void dividieren(double zahl1, double zahl2) {
		return zahl1 / zahl2;
	}

	public static void binary() {
		int zahl = (int) ZahlEingabe();
		int binNum[] = new int[100];
		int i = 1;
		int j;
		// System.out.println("Resultat: " + Integer.toBinaryString(zahl));
		while (zahl != 0) {
			binNum[i++] = zahl % 2;
			zahl = zahl / 2;
		}
		System.out.print("Resultat: ");
		for (j = i; j > 0; j--) {
			System.out.print(binNum[j]);
		}
		System.out.print("\n");
	}
}
